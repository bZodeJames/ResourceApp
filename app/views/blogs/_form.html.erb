<%= form_with(model: @blog, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title %>
  </div>
<br>
  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :blog_author %>
  </div>
<br>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body %>
  </div>
<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>